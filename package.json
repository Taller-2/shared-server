{
  "name": "shared-server",
  "version": "0.0.1",
  "description": "Shared server del TP de Taller II 2018/2",
  "main": "server",
  "engines": {
    "node": "^8.9.4"
  },
  "scripts": {
    "client": "cd client && npm run start",
    "server": "nodemon --inspect server",
    "server-debug": "node $NODE_DEBUG_OPTION server",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "debug": "concurrently --kill-others-on-fail \"npm run server-debug\" \"npm run client\"",
    "start": "node server",
    "heroku-postbuild": "cd client && npm install && npm install --only=dev --no-shrinkwrap && npm run build",
    "create": "sequelize db:create",
    "migrate": "sequelize db:migrate",
    "drop": "sequelize db:drop",
    "test": "npm run beforetest && nyc mocha --exit",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "beforetest": "eslint .",
    "eslint-fix": "eslint . --fix"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^3.0.1",
    "body-parser": "^1.18.3",
    "chai": "^4.1.2",
    "chai-http": "^4.2.0",
    "child-process-promise": "2.2.1",
    "ethereumjs-wallet": "^0.6.0",
    "express": "^4.16.3",
    "express-jwt": "^5.3.1",
    "express-validator": "^5.3.0",
    "http-status-codes": "^1.3.0",
    "json-rules-engine": "^2.3.0",
    "jsonwebtoken": "^8.3.0",
    "mocha": "^5.2.0",
    "multimethod": "^0.1.0",
    "mysql": "^2.16.0",
    "nodemon": "latest",
    "pg": "^7.4.3",
    "pg-hstore": "latest",
    "sequelize": "^4.41.0",
    "sequelize-cli": "^4.1.1",
    "should": "^1.3.0",
    "truffle-hdwallet-provider": "0.0.3",
    "whatwg-url": "^7.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.6.0",
    "babel-core": "^6.6.0",
    "babel-eslint": "^9.0.0",
    "colors": "^1.3.2",
    "concurrently": "^4.0.1",
    "coveralls": "^3.0.2",
    "eslint": "^5.6.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.22.1",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-standard": "^4.0.0",
    "gulp-sourcemaps": "1.7.x",
    "nyc": "^13.1.0"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/Taller-2/shared-server.git"
  },
  "nyc": {
    "exclude": [
      "coverage/**",
      "test/**",
      "test{,-*}.js",
      "**/*.test.js",
      "**/node_modules/**",
      "server/middlewares/auth.js",
      "server/controllers/session.js",
      "scripts/**",
      "server/routes/app_server_logged_data.js",
      "server/controllers/http_service.js"
    ]
  }
}
